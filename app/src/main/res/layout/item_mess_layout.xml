<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    android:padding="10dp"
    android:id="@+id/linear_item_frag_mess">

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_user_profile_gray"
        android:id="@+id/iv_icon_user_mess"
        android:background="@drawable/image_mess_shape"/>


    <LinearLayout
        android:id="@+id/linear_text"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_weight="3"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_marginLeft="5dp">

        <TextView
            android:id="@+id/tv_user_name_mess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="The Name User" />

        <TextView
            android:id="@+id/tv_user_description_mess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Content description" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_time_mess"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="12/08/2019" />
</LinearLayout>